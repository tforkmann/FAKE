@{
    ViewBag.Title = "Manage Users";
    Layout = "_layout.cshtml";
}

@section scripts {
    <script src="@Url.Content("~/Scripts/app/Admin.User.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            var vm = new UserAdminViewModel();
            vm.build();
            ko.applyBindings(vm);
        });
    </script>
}

<h2>Manage Users</h2>

<div>
    <div class="col-md-6">
        <form class="form-horizontal" data-bind="submit: $root.registerUser">
            <fieldset>
                <legend>Create User</legend>
            </fieldset>
            <div class="form-group">
                <label class="control-label">Username</label>
                <input type="text" class="form-control" id="Username" name="Username" />
            </div>

            <div class="form-group">
                <label class="control-label">E-mail</label>
                <input type="text" class="form-control" id="Email" name="Email" />
            </div>

            <div class="form-group">
                <label class="control-label">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" />
            </div>

            <div class="form-group">
                <label class="control-label">Confirm Password</label>
                <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" />
            </div>

            <button type="submit" class="btn btn-primary">Save changes</button>
            <button type="reset" class="btn">Cancel</button>

        </form>
    </div>
    <div class="col-md-6">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: users">
                <tr>
                    <td data-bind="text: username"></td>
                    <td data-bind="text: email"></td>
                    <td data-bind="if: $root.users().length > 1">
                        <button data-bind="click: $root.deleteUser" class="btn btn-danger" style="margin-left: 10px"><i class="glyphicon glyphicon-trash"></i>&nbsp;Delete User</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
